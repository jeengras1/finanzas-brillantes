{
    "name": "Nexus-OS Python RAG Environment",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        // **NUEVA CARACTERÍSTICA:** Añade soporte para Node.js (necesario para npm y gh-pages)
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        },
        // **NUEVA CONFIGURACIÓN:** Cambia el terminal a Zsh para evitar errores de sintaxis
        "settings": {
            "terminal.integrated.defaultProfile.linux": "zsh"
        }
    },
    // Ejecuta la instalación de paquetes después de crear el contenedor.
    "postCreateCommand": "python3 -m pip install --upgrade pip && pip install -r requirements.txt"
}
